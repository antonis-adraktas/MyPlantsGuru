<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_green">

    <TextView
        android:id="@+id/weather_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="Time"
        android:textColor="@color/light_purple"
        android:textColorHint="@color/light_purple"
        app:layout_constraintEnd_toEndOf="@+id/weather_icon_small"
        app:layout_constraintStart_toStartOf="@+id/weather_icon_small"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/weather_icon_small"
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weather_time"
        app:srcCompat="@drawable/dunno" />

    <TextView
        android:id="@+id/temperature_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="temp"
        android:textColor="@color/light_purple"
        android:textColorHint="@color/light_purple"
        app:layout_constraintEnd_toEndOf="@+id/weather_icon_small"
        app:layout_constraintStart_toStartOf="@+id/weather_icon_small"
        app:layout_constraintTop_toBottomOf="@+id/weather_icon_small" />
</androidx.constraintlayout.widget.ConstraintLayout>